{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.organization) }}
        {{ form_row(registrationForm.role) }}
        {{ form_row(registrationForm.location) }}
        {{ form_row(registrationForm.description) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.picture) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}

     <p>do you already have an email?<a href="{{ path('app_login') }}">click here login</a></p>
{% endblock %}
